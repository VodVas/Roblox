//In StarterGUI
local UIS = game:GetService("UserInputService")
local player = game.Players.LocalPlayer
local event = game.ReplicatedStorage.RemoteEvent

UIS.InputBegan:Connect(function(input: InputObject, gameProsessEvent : boolean)
	if input.UserInputType == Enum.UserInputType.MouseButton1 and not gameProsessEvent then
		event:FireServer("Attack")
	end
	
end)









//In ServiceScriptSecrvice
local event = game.ReplicatedStorage.RemoteEvent
local anim = script.Animation

event.OnServerEvent: Connect(function(player: Player, ...: any)
	local character = player.Character
	local humanoid = character:WaitForChild("Humanoid")
	local animator = humanoid:WaitForChild("Animator")
	local animationTrack = humanoid.Animator:LoadAnimation(anim)
	animationTrack:Play()
end)
